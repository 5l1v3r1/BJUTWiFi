<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorSecondary">@color/blueLight</item>
        <item name="android:statusBarColor">@color/grey_dark</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColorSecondary">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ThemeGreenYun" parent="AppTheme">
        <item name="colorAccent">@color/greenYun</item>
        <item name="android:colorSecondary">@color/greenYunLight</item>
    </style>

    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorSecondary">@color/blueLight</item>
    </style>

    <style name="ThemeRed" parent="AppTheme">
        <item name="colorAccent">@color/red</item>
        <item name="android:colorSecondary">@color/redLight</item>
    </style>

    <style name="ThemePurple" parent="AppTheme">
        <item name="colorAccent">@color/purple</item>
        <item name="android:colorSecondary">@color/purpleLight</item>
    </style>

    <style name="ThemeOrange" parent="AppTheme">
        <item name="colorAccent">@color/orange</item>
        <item name="android:colorSecondary">@color/orangeLight</item>
    </style>

    <style name="ThemePink" parent="AppTheme">
        <item name="colorAccent">@color/pink</item>
        <item name="android:colorSecondary">@color/pinkLight</item>
    </style>

    <style name="ThemeIndigo" parent="AppTheme">
        <item name="colorAccent">@color/indigo</item>
        <item name="android:colorSecondary">@color/indigoLight</item>
    </style>

    <style name="ThemeGreen" parent="AppTheme">
        <item name="colorAccent">@color/green</item>
        <item name="android:colorSecondary">@color/greenLight</item>
    </style>

    <style name="ThemeTeal" parent="AppTheme">
        <item name="colorAccent">@color/teal</item>
        <item name="android:colorSecondary">@color/tealLight</item>
    </style>

    <style name="ThemeBlack" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
        <item name="android:colorSecondary">@color/blackLight</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
    </style>
</resources>
